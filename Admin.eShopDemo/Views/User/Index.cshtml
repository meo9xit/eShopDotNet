@model UserViewModel
@{
     ViewData["Title"] = "Quản lý user";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>User name</th>
            <th>Tên đầy đủ</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
    @{
        foreach(var user in Model.ListUsers)
        {

            <tr>
                <td><input type="text" name="UserName" value = "@user.UserName"></td>
                <td><input type="text" name="FullName" value = "@user.FullName"></td>
                <td>
                    <button><i class="fa-solid fa-pen-to-square"></i></button>
                    <form action="/delete" method="post"><input type="hidden" name="id" value=@user.Id /><button><i class="fa-solid fa-circle-trash"></i></button></form>
                </td>
            </tr>
        }

    }
    </tbody>
</table>
