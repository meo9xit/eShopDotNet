@model UserViewModel
@{
    ViewData["Title"] = "Quản lý user";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>User name</th>
            <th>Tên đầy đủ</th>
            <th>Email</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var user in Model.ListUsers)
            {

                <tr>
                    <td>@Html.DisplayFor(item => user.UserName)</td>
                    <td>@Html.DisplayFor(item => user.FullName)</td>
                    <td>@Html.DisplayFor(item => user.Email)</td>
                    <td>
                        <form action="/user/delete" method="post">
                            <a class="btn" href="@Url.Action("Edit","User", new{Id = user.Id})"><i class="fa-solid fa-pen-to-square"></i></a>
                            <input type="hidden" name="id" value=@user.Id />
                            <button class="btn" onclick="return confirm('Bạn có chắc chắn chưa?')">
                                <i class="fa fa-trash"></i>
                            </button>

                        </form>
                    </td>
                </tr>
            }

        }
    </tbody>
</table>
