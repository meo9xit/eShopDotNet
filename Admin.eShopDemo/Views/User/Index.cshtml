@model UserViewModel
@{
     ViewData["Title"] = "Quản lý user";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>User name</th>
            <th>Tên đầy đủ</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
    @{
        foreach(var user in Model.ListUsers)
        {

            <tr>
                <td>@user.UserName</td>
                <td>@user.FullName</td>
                <td>
                    <button><i class="fa-solid fa-pen-to-square"></i></button>
                    <button><i class="fa-solid fa-circle-trash"></i></button>
                </td>
            </tr>
        }

    }
    </tbody>
</table>
